<body>

<%= render 'shared/header' %>
<p style="color: green"><%= notice %></p>

<h1>Create content dtos</h1>

<section class="index-grid">

  <%= link_to new_create_content_dto_path, class: "remove-text-decoration" do %>
    <button class="index-button-new">
      <h1>Opret nyt opslag</h1>
      <div class="plus-sign"> + </div>
    </button>
  <% end %>

  <% @create_content_dtos.each do |content| %>
    <article class="index-article">
      <% if content['id'] == 21 %>
        <% unless content['image'].nil? %>
          <% image = JSON.parse(content['image']) %>
          <img src="data:<%= image['type'] %>;base64,<%= image['data'] %>" alt="Picture" class="index-image">
        <% end %>
      <% else %>
        <img src="https://via.placeholder.com/300x200" alt="Placeholder Image" class="index-image">
      <% end %>

      <div class="index-text">
        <h1><%= content['title'].to_s %></h1>
        <p>
          <%= content['body'] %>
        </p>
      </div>
    </article>
  <% end %>

</section>
</body>
